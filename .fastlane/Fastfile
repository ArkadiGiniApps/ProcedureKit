      scheme: "OS X Operations",
      output_directory: ".ci/xcodebuild-data/",
      xcargs: "-derivedDataPath .ci/xcodebuild-data/"
    )

  end

  desc "Runs all the tests"
  lane :test do

    scan(
      project: "Operations.xcodeproj"
      scheme: "OS X Operations",
      output_directory: ".ci/xcodebuild-data/",
      xcargs: "-derivedDataPath .ci/xcodebuild-data/"
    )

